<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@android:color/holo_orange_dark</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="AboutStyle">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardStyle" parent="@style/CardView">
        <item name="android:layout_margin">5dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:background">@drawable/com_facebook_button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
